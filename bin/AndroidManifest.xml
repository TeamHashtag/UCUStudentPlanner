<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ccs.ucustudentplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyDay"
            android:label="@string/title_activity_my_day" >
        </activity>
        <activity
            android:name=".MyHomework"
            android:label="@string/title_activity_my_homework" >
        </activity>
        <activity
            android:name=".MyPlan"
            android:label="@string/title_activity_my_plan" >
        </activity>
        <activity
            android:name=".MyExam"
            android:label="@string/title_activity_my_exam" >
        </activity>
        <activity
            android:name=".NavDraweritem"
            android:label="@string/title_activity_nav_draweritem" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_mypreference"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Addplan"
            android:label="@string/title_activity_addplan" >
        </activity>
        <activity
            android:name=".DbAdapter"
            android:label="@string/title_activity_db_adapter" >
        </activity>
    </application>

</manifest>
